---
import BaseLayout from "~/layouts/BaseLayout.astro";
import { GAMES_LIST } from "~/games-list";
---

<BaseLayout>
    <header>
        <h1>Games</h1>
        <span>{GAMES_LIST.length} Games</span>
    </header>

    <ul class="games">
        {
            GAMES_LIST.map((game, idx) => {
                const href = `/games/${game.name.toLowerCase()}`;
                const paddedIndex = idx + 1 > 9 ? `${idx + 1}` : `0${idx + 1}`;
                const title = `#${paddedIndex} ${game.name}`;

                return (
                    <li>
                        <a href={href} class="game">
                            <span>{title}</span>
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    fill="currentColor"
                                    d="M5.536 21.886a1 1 0 0 0 1.033-.064l13-9a1 1 0 0 0 0-1.644l-13-9A1 1 0 0 0 5 3v18a1 1 0 0 0 .536.886"
                                />
                            </svg>
                        </a>
                    </li>
                );
            })
        }
    </ul>
</BaseLayout>

<style>
    header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 2rem 1rem;
    }

    .games {
        display: flex;
        flex-direction: column;
    }

    .game {
        padding-inline: 2rem;
        height: 5rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: var(--card-bg);
        border-bottom: 1px solid var(--card-border);
        color: var(--tx2);
        cursor: crosshair;
        transition:
            color 0.2s ease,
            transform 0.2s ease,
            box-shadow 0.2s ease;

        &:hover {
            color: var(--tx);
            translate: 0 -2px;
            box-shadow: 0px 28px 15px -3px rgba(0, 0, 0, 0.1);
        }

        & > svg {
            transition-property: translate;
            transition-duration: 200ms;
            transition-timing-function: ease-out;
        }

        &:hover > svg {
            translate: 10px;
        }
    }
</style>
